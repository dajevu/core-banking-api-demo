{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$ref": "#/definitions/Document",
  "definitions": {
    "Document": {
      "type": "object",
      "additionalProperties": true,
      "required": [
        "id",
        "documentStatus"
      ],
      "properties": {
        "id": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ],
          "description": "The global identifier for this item"
        },
        "name": {
          "type": "string",
          "description": "Display name of the document"
        },
        "description": {
          "type": "string",
          "description": "Purpose of the document"
        },
        "documentStatus": {
          "enum": [
            "ARCHIVED",
            "CURRENT",
            "DRAFT",
            "OBSOLETE"
          ],
          "type": "string"
        },
        "signatureStatus": {
          "enum": [
            "DECLINED",
            "SIGNED",
            "UNSIGNED"
          ],
          "type": "string"
        },
        "externalIds": {
          "type": "array",
          "items": {
            "type": "object",
            "example": {
              "externalIdType": [
                {
                  "id": "id1",
                  "name": "adipisicing labore Duis in anim"
                }
              ],
              "externalId": "Ut",
              "id": "irure proident cillum deserunt dolor",
              "status": "INVALID",
              "statusLastChangedDate": "1999-11-26T02:28:11.661Z"
            },
            "description": "Defines a structure for referencing an entity in external systems",
            "additionalProperties": true,
            "required": [
              "externalIdType",
              "externalId",
              "id"
            ],
            "properties": {
              "id": {
                "anyOf": [
                  {
                    "type": "string"
                  },
                  {
                    "type": "null"
                  }
                ]
              },
              "externalId": {
                "type": "string",
                "description": "A unique identifier assigned to an entity in another system"
              },
              "externalIdType": {
                "description": "Identifies the system that owns or otherwise recognizes this unique identifier",
                "type": "array",
                "items": {
                  "anyOf": [
                    {
                      "type": "string"
                    },
                    {
                      "description": "Identifies the external system that owns or otherwise recognizes a particular identifier",
                      "type": "object",
                      "additionalProperties": true,
                      "required": [
                        "id",
                        "name"
                      ],
                      "properties": {
                        "id": {
                          "anyOf": [
                            {
                              "type": "string"
                            },
                            {
                              "type": "null"
                            }
                          ]
                        },
                        "name": {
                          "type": "string"
                        }
                      }
                    }
                  ]
                }
              },
              "status": {
                "enum": [
                  "VALID",
                  "INVALID"
                ],
                "description": "Indicates whether this identifier is currently valid or not",
                "type": "string"
              },
              "statusLastChangedDate": {
                "anyOf": [
                  {
                    "type": "string",
                    "format": "date-time"
                  },
                  {
                    "type": "null"
                  }
                ],
                "description": "Date and time of the last change in status"
              }
            }
          }
        },
        "auditInfo": {
          "description": "Defines standard system audit fields available for most types",
          "type": "object",
          "example": {
            "isDeleted": true,
            "createdBy": "commodo minim dolore est",
            "updatedBy": "dolor quis nulla",
            "updatedDate": "1950-01-23T19:52:29.659Z",
            "createdDate": "1950-01-23T19:52:29.659Z"
          },
          "additionalProperties": true,
          "required": [
            "isDeleted",
            "createdBy",
            "updatedBy",
            "updatedDate",
            "createdDate"
          ],
          "properties": {
            "createdDate": {
              "anyOf": [
                {
                  "type": "string",
                  "format": "date-time"
                },
                {
                  "type": "null"
                }
              ],
              "description": "Timestamp of when the entity was created"
            },
            "createdBy": {
              "type": "string",
              "description": "Identifies the system or user which created the entity"
            },
            "updatedDate": {
              "anyOf": [
                {
                  "type": "string",
                  "format": "date-time"
                },
                {
                  "type": "null"
                }
              ],
              "description": "Timestamp of when the entity was last updated"
            },
            "updatedBy": {
              "type": "string",
              "description": "Identifies the system or user which last updated the entity"
            },
            "isDeleted": {
              "anyOf": [
                {
                  "type": "boolean"
                },
                {
                  "type": "null"
                }
              ],
              "description": "Indicates whether or not the entity has been soft-deleted"
            }
          }
        }
      }
    }
  }
}